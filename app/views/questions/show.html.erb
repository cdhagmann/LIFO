<%= render 'header' %>

<% if notice %>
  <p class="alert alert-primary" role="alert"><%= notice %></p>
<% end %>

<div class='container'>
  <div class='pb-2 border-bottom border-danger'>
    <div class="card border-danger mb-3 d-flex">
      <div class="card-header d-flex justify-content-between">
        <div class='d-flex justify-content-start align-items-center'>
          <% @vote = Vote.where('user_id=?', current_user.id).where('question_id=?', @question.id)[0] if current_user %>
          <div class='d-flex flex-column justify-content-center mx-2'>
            <% if logged_in? && @vote.nil? %>
              <%= link_to '<i class="fas fa-sort-up text-gray-dark"></i>'.html_safe, question_votes_path(@question, {vote: {value: 1, user_id: current_user, question_id: @question.id}}), method: :answer %>
              <span class='text-gray-dark'><%= @question.score %></span>
              <%= link_to '<i class="fas fa-sort-down text-gray-dark"></i>'.html_safe, question_votes_path(@question, {vote: {value: -1, user_id: current_user, question_id: @question.id}}), method: :answer %>
            <% elsif logged_in? && @vote.value == 1 %>
              <i class="fas fa-sort-up text-light"></i>
              <span class='text-success'><%= @question.score %></span>
              <%= link_to '<i class="fas fa-sort-down text-gray-dark"></i>'.html_safe, question_vote_path(@question, @vote), method: :delete %>
            <% elsif logged_in? && @vote.value == -1 %>
              <%= link_to '<i class="fas fa-sort-up text-gray-dark"></i>'.html_safe, question_vote_path(@question, @vote), method: :delete %>
              <span class='text-danger'><%= @question.score %></span>
              <i class="fas fa-sort-down text-light"></i>
            <% else %>
              <span class='text-gray-dark'><%= @question.score %></span>
            <% end %>
          </div>
          <h3><%= @question.title %></h3>
        </div>
        <% if current_user && (current_user.id == @question.user_id || current_user.id == 1) %>
          <div class='d-flex'>
            <%= link_to '<i class="fas fa-pen p-1"></i>'.html_safe, edit_question_path(@question) %>
            <%= link_to '<i class="fas fa-trash text-danger p-1"></i>'.html_safe, @question, method: :delete, data: {confirm: 'Are you sure?'} %>
          </div>
        <% end %>
      </div>

      <div class="card-body">

        <p class="card-text"><%= markdown(@question.body) %></p>
      </div>
      <div class="d-inline-flex justify-content-between align-items-end flex-column align-center">
        <div class=" d-flex justify-content-around align-items-start mt-4 py-2 px-1 mb-1 ">
          <% if @question.user.avatar.attached? %>
            <%= image_tag(@question.user.avatar, width: "40", class: "mr-2 py-1 px-1 ") %>
          <% end %>
          <div class='d-flex flex-column justify-content-end'>
            <%= link_to '@' + @question.user.username, @question.user, :class => '' %>
            <small>Last updated
              <% if (Time.now - @question.created_at).to_i < 60 %>
                <%= (Time.now - @question.created_at).to_i %> sec. ago
              <% elsif (Time.now - @question.created_at).to_i < 3600 %>
                <%= (Time.now - @question.created_at).to_i / 60 %> min. ago
              <% elsif (Time.now - @question.created_at).to_i < (3600 * 48) %>
                <%= (Time.now - @question.created_at).to_i / 3600 %> hr. ago
              <% else %>
                <%= (Time.now - @question.created_at).to_i / (3600 * 24) %> days ago
              <% end %></small>
          </div>
        </div>
      </div>
    </div>
  </div>

  <h2 class='mt-3'>Answers</h2>

  <% if current_user %>
    <div class='pb-2 border-bottom border-danger'>
      <%= form_with(url: question_answers_path(@question).html_safe, local: true, :html => {:class => ''}) do |form| %>

        <div class="form-group">
          <%= form.text_area :body, :class => 'form-control' %>
        </div>

        <%= form.hidden_field :user_id, :value => current_user.id %>
        <%= form.hidden_field :question_id, :value => @question.id %>

        <div class="actions">
          <%= form.submit :class => "btn btn-danger btn-block" %>
        </div>
      <% end %>
    </div>
  <% end %>

  <% if @question.has_accepted_answer? %>
    <div class='py-2 border-bottom border-danger' id="answer_<%= @question.accepted_answer.id %>">
      <div class="card border-primary mt-5">
        <div class="card-body d-flex justify-content-between">
          <div class="card-text ml-2"><%= markdown(@question.accepted_answer.body).html_safe %></div>
          <div class="d-inline-flex justify-content-between align-items-end flex-column align-center">
            <% if current_user && (current_user.id == @question.accepted_answer.user_id || current_user.id == 1) %>
              <div class='d-flex'>
                <%= link_to '<i class="fas fa-pen p-1"></i>'.html_safe, edit_question_answer_path(@question, @question.accepted_answer) %>
                <%= link_to '<i class="fas fa-trash text-danger p-1"></i>'.html_safe, question_answer_path(@question, @question.accepted_answer), method: :delete, data: {confirm: 'Are you sure?'} %>
              </div>
            <% else %>
              <br>
            <% end %>
            <div class="text-right d-flex justify-content-around align-items-start mt-4 py-2 px-1 mb-1 ">
              <% if @question.accepted_answer.user.avatar.attached? %>
                <%= image_tag(@question.accepted_answer.user.avatar, width: "40", class: "mr-2 py-1 px-1 ") %>
              <% end %>
              <div class='d-flex flex-column justify-content-end'>
                <%= link_to '@' + @question.accepted_answer.user.username, @question.user, :class => '' %>
                <small>Last updated
                  <% if (Time.now - @question.accepted_answer.created_at).to_i < 60 %>
                    <%= (Time.now - @question.accepted_answer.created_at).to_i %> sec. ago
                  <% elsif (Time.now - @question.accepted_answer.created_at).to_i < 3600 %>
                    <%= (Time.now - @question.accepted_answer.created_at).to_i / 60 %> min. ago
                  <% elsif (Time.now - @question.accepted_answer.created_at).to_i < (3600 * 48) %>
                    <%= (Time.now - @question.accepted_answer.created_at).to_i / 3600 %> hr. ago
                  <% else %>
                    <%= (Time.now - @question.accepted_answer.created_at).to_i / (3600 * 24) %> days ago
                  <% end %></small>
              </div>
            </div>
          </div>
        </div>
        <div class="card-footer d-flex align-items-center">
          <% if logged_in? && current_user.id == @question.user_id %>
            <%= link_to '<i class="fas fa-check-circle text-success mr-3" style="font-size:3rem"></i>'.html_safe,
                        question_answer_path(@question, @question.accepted_answer, {:question_accepted_id => nil}),
                        method: :patch %>
          <% else %>
            <i class="fas fa-check-circle text-success mr-3" style="font-size:3rem"></i>
          <% end %>
          <%= render 'votes', answer: @question.accepted_answer %>
          <small class='ml-3'>Last updated
            <% if (Time.now - @question.accepted_answer.updated_at).to_i < 60 %>
              <%= (Time.now - @question.accepted_answer.created_at).to_i %> sec. ago
            <% elsif (Time.now - @question.accepted_answer.updated_at).to_i < 3600 %>
              <%= (Time.now - @question.accepted_answer.created_at).to_i / 60 %> min. ago
            <% elsif (Time.now - @question.accepted_answer.updated_at).to_i < (3600 * 48) %>
              <%= (Time.now - @question.accepted_answer.created_at).to_i / 3600 %> hr. ago
            <% else %>
              <%= (Time.now - @question.accepted_answer.updated_at).to_i / (3600 * 24) %> days ago
            <% end %></small>
        </div>
      </div>
    </div>
  <% end %>

  <% @answers.sort_by(&:score).reverse.each do |answer| %>
    <% unless answer.question_accepted_id %>
      <div class='py-2 border-bottom border-danger' id='answer_<%= answer.id %>'>
        <div class="card mt-5">
          <div class="card-body d-flex justify-content-between">
            <div class="card-text ml-2"><%= markdown(answer.body).html_safe %></div>
            <div class="d-inline-flex justify-content-between align-items-end flex-column align-center">
              <% if current_user && (current_user.id == answer.user_id || current_user.id == 1) %>
                <div class='d-flex'>
                  <%= link_to '<i class="fas fa-pen p-1"></i>'.html_safe, edit_question_answer_path(@question, answer) %>
                  <%= link_to '<i class="fas fa-trash text-danger p-1"></i>'.html_safe, question_answer_path(@question, answer), method: :delete, data: {confirm: 'Are you sure?'} %>
                </div>
              <% else %>
                <br>
              <% end %>

              <div class="text-right d-flex justify-content-around align-items-start mt-4 py-2 px-1 mb-1 ">
                <% if answer.user.avatar.attached? %>
                  <%= image_tag(answer.user.avatar, width: "40", class: "mr-2 py-1 px-1 ") %>
                <% end %>
                <div class='d-flex flex-column justify-content-end'>
                  <%= link_to '@' + answer.user.username, @question.user, :class => '' %>
                  <small>Last updated
                    <% if (Time.now - answer.created_at).to_i < 60 %>
                      <%= (Time.now - answer.created_at).to_i %> sec. ago
                    <% elsif (Time.now - answer.created_at).to_i < 3600 %>
                      <%= (Time.now - answer.created_at).to_i / 60 %> min. ago
                    <% elsif (Time.now - answer.created_at).to_i < (3600 * 48) %>
                      <%= (Time.now - answer.created_at).to_i / 3600 %> hr. ago
                    <% else %>
                      <%= (Time.now - answer.created_at).to_i / (3600 * 24) %> days ago
                    <% end %></small>
                </div>
              </div>
            </div>
          </div>
          <div class="card-footer d-flex align-items-center">
            <% if logged_in? && current_user.id == @question.user_id %>
              <%= link_to '<i class="fas fa-check-circle text-grey-dark mr-2"></i>'.html_safe,
                          question_answer_path(@question, answer, {:question_accepted_id => @question.id}),
                          method: :patch %>
            <% end %>
            <%= render 'votes', answer: answer %>
            <small class='ml-3'>Last updated
              <% if (Time.now - answer.updated_at).to_i < 60 %>
                <%= (Time.now - answer.created_at).to_i %> sec. ago
              <% elsif (Time.now - answer.updated_at).to_i < 3600 %>
                <%= (Time.now - answer.created_at).to_i / 60 %> min. ago
              <% elsif (Time.now - answer.updated_at).to_i < (3600 * 48) %>
                <%= (Time.now - answer.created_at).to_i / 3600 %> hr. ago
              <% else %>
                <%= (Time.now - answer.updated_at).to_i / (3600 * 24) %> days ago
              <% end %>
            </small>
            <div class="text-right">
              <div class="d-flex justify-content-center align-items-center flex-column align-center px-3">
                <% if logged_in? && (current_user.id == answer.user_id) %>
                  <%= link_to '<i class="fas fa-trash text-danger"></i>'.html_safe, question_answer_path(@question, answer), method: :delete, data: {confirm: 'Are you sure?'} %>
                  <%= link_to '<i class="fas fa-pen"></i>'.html_safe, edit_question_answer_path(@question, answer) %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>

</div>